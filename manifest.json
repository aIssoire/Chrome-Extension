{
    "name": "My YT Bookmarks",
    "version": "1.0",
    "description": "Saving timestamps in YT videos",
    "permission": ["storage", "tabs"],
    "host_permissions": ["*://*.youtube.com/*"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts":[
        {
        "matches":["https://*.youtube.com/*"],
        "js":["contentScript.js"]
        }
    ],
    "web_accessible_resources":[
        {
          "resources":[
             "assets/bookmark.png",
             "assets/play.png",
             "assets/delete.png",
             "assets/save.png"
          ],
          "matches":["https://*.youtube.com/*"]
        }
      ],
    "action": {
        "default_icon":{
            "16":"assets/moi_16x16.jpeg",
           "48":"assets/moi_48x48.jpeg"
       },
       "default_title":"My YT Bookmarks",
       "default_popup":"popup.html"
    },
    "manifest_version": 3
}
